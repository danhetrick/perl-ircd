<?xml version="1.0" encoding="UTF-8"?>
<config>

	<!-- Listen on ports 6667-6669 -->
	<port>6667</port>
	<port>6668</port>
	<port>6669</port>

	<name>Perl.IRC.Server</name>
	<nicklength>15</nicklength>
	<network>PerlNet</network>

	<max_targets>4</max_targets>
	<max_channels>15</max_channels>
	<info>My IRC Server</info>

</config>

<operator>

	<username>bob</username>
	<password>changeme</password>
	<ipmask>*@*</ipmask>

</operator>

<operator>

	<username>joe</username>
	<password>changeme</password>
	<ipmask>*@*</ipmask>

</operator>

<auth>

	<mask>*@*</mask>
	<!--
		Uncomment to add options to auth

	<password>changeme</password>
	<spoof>google.com</spoof>
	<no_tilde>1</no_tilde>

	-->


</auth>

<auth>

	<mask>*@google.com</mask>
	<password>changeme</password>
	<spoof>devil.com</spoof>
	<tilde>1</tilde>

</auth>